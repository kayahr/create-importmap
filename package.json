{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/create-importmap",
    "version": "0.0.1",
    "type": "module",
    "description": "Command-line tool to create a dependency ESM importmap in JSON or JavaScript format from the project's package.json",
    "keywords": [
        "importmap",
        "cli",
        "package.json",
        "javascript",
        "json",
        "esm"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/create-importmap",
    "homepage": "https://github.com/kayahr/create-importmap",
    "bugs": "https://github.com/kayahr/create-importmap/issues",
    "funding": "https://github.com/kayahr/create-importmap?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "bin/",
        "lib/main/",
        "src/main/"
    ],
    "bin": {
        "create-importmap": "./bin/create-importmap"
    },
    "exports": "./lib/main/create-importmap.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "test": "run-s test:*",
        "test:unit": "c8 node --test",
        "test:lint": "eslint --max-warnings 0",
        "test:spell": "cspell --no-progress --no-summary",
        "prepare": "run-s clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.5.0",
        "@types/node": "22.15.21",
        "c8": "10.1.3",
        "cspell": "9.0.2",
        "npm-run-all": "4.1.5",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "typescript": "5.8.3"
    },
    "dependencies": {
        "@jsenv/importmap-node-module": "^7.1.1",
        "commander": "^14.0.0",
        "file-url": "^4.0.0"
    }
}
